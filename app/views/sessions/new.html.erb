<div class="container flex-center">
    <div class="card">
        <span class="title">Login</span>
        <%= "<span>#{@msg}</span>".html_safe if @msg %>
        <%= form_for(:sessions, url: login_path, :html => {:class => "form-control"}) do |f| %>
            <%= f.email_field :email, placeholder: "email@example.com" %>
            <%= f.password_field :password, placeholder: "********" %>

            <%= f.submit "Log in"%>
            <span>No account? <a href="/sign_up">Sign Up</a></span>
        <% end %>
    </div>
</div>
